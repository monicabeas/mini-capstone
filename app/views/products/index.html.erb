<h1> Products </h1>


<!-- Single button -->
<div class = "row">
	<div class = "col-md-10">
		<div class="btn-group btn-dropdown">
		  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		    Sort By <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu">
		    <li><a href="/products?sort=price&sort_order=asc">Sort by Price (Lowest-Highest)</a></li>
		    <li><a href="/products?sort=price&sort_order=desc">Sort by Price (Highest-Lowest)</a></li>
		  </ul>
		</div>
	</div>
</div>




<% @products.each_slice(3) do |three_products| %>

	<div class="row">
		<% three_products.each do |product| %>
			<div class = "col-md-4">
				<div class ="well">
					<% product.images.limit(1).each do |image| %>
						<img class="index_product_image" src="<%= image.image %>">
					<% end %>	
					<a href="http://localhost:3000/products/<%=product.id%>">
							<h3><%= product.name %></h3>
					</a>	
					<h4>$<%= product.price %> <h4>
				</div>
			</div>
		<%end%>
	</div>
<% end %>