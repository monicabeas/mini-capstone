<h1> Edit Supplier </h1>

<%= form_tag "/suppliers/#{@supplier.id}", method: :patch do %>
	<div class="form-group center">
		<label for="InputName">Enter Name</label>
		<input type="text" class="form-control" name = "name" id="InputName" value="<%= @supplier.name %>">
	</div>
	<div class="form-group center">
		<label for="InputEmail">Enter Email</label>
		<input type="text" class="form-control" name = "email" id="InputEmail" value="<%= @supplier.email %>">
	</div>
	<div class="form-group center">
		<label for="InputPhone">Enter Phone Number</label>
		<input type="text" class="form-control" name = "phone_number" id="InputPhone" value="<%= @supplier.phone_number %>">
	</div>
		<input class="btn btn-default btn-center" type="submit" value="Edit Supplier">

<% end %> 