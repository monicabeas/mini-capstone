<h1> See Suppliers </h1>

<% @suppliers.each_slice(3) do |three_suppliers| %>

	<div class="row">
		<% @suppliers.each do |supplier| %>
			<div class = "col-md-4">
					<a href="/suppliers/<%=supplier.id%>">
					<h3><%= supplier.name %></h3>
						</a>
					<h4><%= supplier.email %> <h4>
					<p><%= supplier.phone_number %><p>
			</div>
		<%end%>
	</div>
<% end %>